@model BusinessObjects.SystemAccount

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>SystemAccount</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AccountId" class="control-label"></label>
                <input asp-for="AccountId" class="form-control" readonly />
                
            </div>
            <div class="form-group">
                <label asp-for="AccountName" class="control-label"></label>
                <input asp-for="AccountName" class="form-control" />
                <span asp-validation-for="AccountName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountEmail" class="control-label"></label>
                <input asp-for="AccountEmail" class="form-control" />
                <span asp-validation-for="AccountEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountRole" class="control-label"></label>
                <<select asp-for="AccountRole" class="form-control"
                         asp-items="@(new SelectList(ViewBag.Roles, "Value", "Text"))">
                </select>
                <span asp-validation-for="AccountRole" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <span class="text-success" style="margin-left: 10px;">@ViewBag.SuccessMessage</span>
            </div>
          
            
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
